{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/products/page.tsx",
    "components/ProductForm.tsx",
    "lib/mongodb.ts",
    "app/api/upload/route.ts",
    "app/categories/page.tsx",
    "app/orders/page.tsx",
    "lib/mongoose.ts",
    "app/products/new/page.tsx",
    "next.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
